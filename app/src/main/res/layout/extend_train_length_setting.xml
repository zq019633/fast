        <!--android:layout_marginTop="20dp"-->
        <!--android:layout_width="120dp"-->
        <!--android:background="@color/black_blue"-->
        <!--android:text="确定"/>-->
    <ImageView
        android:id="@+id/settinglengthsure"
        style="@style/imgbtn"
        android:src="@drawable/ic_action_sure"
        android:layout_marginTop="20dp"/>
</LinearLayout>
