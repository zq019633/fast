<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.fitz.fastreading.ui.activity.train.game2.LookForCompatriotActivity">

    <ImageView
        android:id="@+id/image_end"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_game_end" />

    <ImageButton
        android:id="@+id/image_skip"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_above="@id/image_end"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_game_skip" />

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/image_skip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/image_time"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_game_time" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="00:00:00"/>
    </FrameLayout>

    <com.android.fitz.fastreading.widget.TurnTableView
        android:id="@+id/turn_table_view"
        android:layout_width="444dp"
        android:layout_height="444dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="200dp" />
</RelativeLayout>
